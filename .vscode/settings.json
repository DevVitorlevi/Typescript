{
    // 🚀 Execução instantânea TypeScript com TSX
    "code-runner.executorMap": {
        "typescript": "tsx --watch"
    },
    "code-runner.runInTerminal": true,
    // 🎨 Tema escuro moderno
    "workbench.colorTheme": "Vivid Black",
    // ✍️ Fonte e estilo
    "editor.lineHeight": 24,
    "editor.fontSize": 14,
    // 🖼️ Configurações do CodeSnap (capturas de código)
    "codesnap.backgroundColor": "#1e1e1e",
    "codesnap.showWindowControls": true,
    "codesnap.padding": 16,
    "codesnap.roundedCorners": true,
    // 🧹 Interface limpa
    "editor.minimap.enabled": false
}
{
    "code-runner.executorMap": {
        "typescript": "tsx --watch"
    },
    "code-runner.runInTerminal": true,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.lineHeight": 24,
    "editor.minimap.enabled": false,
    "editor.formatOnSave": true,            // formata automaticamente ao salvar
    "workbench.colorTheme": "Cyber Neon",
    "workbench.iconTheme": "fira-code-material-icon-theme",
    
    // Prettier
    "prettier.semi": true,                  // adiciona ; automaticamente
    "prettier.singleQuote": true,           // usa aspas simples
    "prettier.trailingComma": "all",        // adiciona v√≠rgula no final de objetos/arrays
    
    // Codesnap
    "codesnap.backgroundColor": "#1e1e1e",
    "codesnap.showWindowControls": true,
    "codesnap.padding": 16,
    "codesnap.roundedCorners": true
}

{
    "code-runner.executorMap": {
        "typescript": "tsx --watch"
    },
    "code-runner.runInTerminal": true,
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.lineHeight": 24,
    "editor.minimap.enabled": false,
    "editor.formatOnSave": true,             
    "editor.defaultFormatter": "esbenp.prettier-vscode",   // Prettier como formatador padr√£o
    "workbench.colorTheme": "Cyber Neon",
    "workbench.iconTheme": "fira-code-material-icon-theme",
    
    // Prettier
    "prettier.semi": true,                  
    "prettier.singleQuote": true,           
    "prettier.trailingComma": "all",        
    
    // Codesnap
    "codesnap.backgroundColor": "#1e1e1e",
    "codesnap.showWindowControls": true,
    "codesnap.padding": 16,
    "codesnap.roundedCorners": true
}
